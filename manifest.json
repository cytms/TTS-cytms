{
  "name" : "TTS-cytms",
  "version" : "1.0.0",
  "manifest_version": 2,
  "description" : "Text-to-speech chrome extension",
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : true
  },
  "browser_action" :
  {
    "default_icon" : {
      "19" : "music.png",
      "38" : "music.png"
    },
    "default_title" : "TTS"
  },
  "content_security_policy" : "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; img-src *",
  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons" : {
    "16" : "music.png",
    "48" : "music.png",
    "128" : "music.png"
  }
}
